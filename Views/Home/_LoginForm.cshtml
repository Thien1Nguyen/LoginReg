@model LoginUser

<form 
    asp-controller="Home" 
    asp-action="Login" 
    method="Post"
>
    <span class="text-danger" asp-validation-for="LoginEmail"></span> 
    <div class="mb-3">
        <label asp-for="LoginEmail">Email </label>
        <input type="text" asp-for="LoginEmail" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="LoginPassword">Password <span class="text-danger" asp-validation-for="LoginPassword"></span> </label>
        <input type="password" asp-for="LoginPassword" class="form-control">
    </div>

    <button>Login</button>
</form>